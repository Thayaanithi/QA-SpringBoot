package com.example.accountController;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.model.Account;

@RestController
public class AccountController {
	public List<Account> list= new ArrayList();
	public long update;
	
	@PostMapping("/create")
	public void create(@RequestBody Account a1) {
		this.list.add(a1);
	}
	@GetMapping("/read")
	public List<Account> read() {
		return this.list;
	}
	
	@PutMapping("/update/{id}")
	public Account update(@PathVariable long id, @RequestBody Account a2)
		{
		this.list.remove(id);
		this.list.add(a2);
		return this.update(id, a2);
	}
		
	
	
	
	@DeleteMapping("/delete")
	public void delete() {
		
	}
	
@GetMapping("/test") 

	public String test() {
		return "Hi Account Holder";
	}
}


